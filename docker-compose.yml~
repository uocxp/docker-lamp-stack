version: '2'
services:
 mysite:
  build: .
  ports :
   - 8180:80
  volumes:
  - www:/var/www/html/ 
  depends_on: 
   - mysql
 phpmyadmin:
   image: phpmyadmin/phpmyadmin  
   ports :
    - 8181:80
   restart: always 
   environment:
    - PMA_HOST=mysql 
    - PMA_USER=root
    - PMA_PASSWORD=password
    - PMA_ARBITRARY=1
   depends_on: 
   - mysql
   
 mysql:
  image: mysql:5.5
  ports:
    - 3306:3306
  expose:
    - "3306"  
  environment:
     - MYSQL_ROOT_PASSWORD=password
     - MYSQL_DATABASE=mysite
     - MYSQL_USER=mysite
     - MYSQL_PASSWORD=password